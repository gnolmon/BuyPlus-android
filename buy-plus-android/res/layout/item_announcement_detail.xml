<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/bg_parent_rounded_corner"
        android:orientation="vertical"
        android:paddingBottom="@dimen/feed_item_padding_top_bottom"
        android:paddingTop="@dimen/feed_item_padding_top_bottom" >

        <RelativeLayout
            android:id="@+id/rlshop"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/feed_item_padding_left_right" >

            <lc.buyplus.customizes.RoundedViewImage
                android:id="@+id/avaStore"
                android:layout_width="@dimen/feed_item_profile_pic"
                android:layout_height="@dimen/feed_item_profile_pic"
                android:scaleType="fitCenter"
                android:src="@drawable/square" >
            </lc.buyplus.customizes.RoundedViewImage>

            <LinearLayout
                android:id="@+id/lnName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/avaStore"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_standard" >

                <TextView
                    android:id="@+id/tvNameStore"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="JackLand"
                    android:textColor="@color/actionbar"
                    android:textSize="@dimen/feed_item_profile_name" />

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="10:00"
                    android:textColor="@color/title"
                    android:textSize="@dimen/feed_item_timestamp" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlintro"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/lnName" >

                <ImageView
                    android:id="@+id/imSaleOff"
                    android:layout_width="150dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:src="@drawable/saleoff" />

                <TextView
                    android:id="@+id/tvTimeSale"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="7dp"
                    android:layout_marginRight="5dp"
                    android:text="10:00"
                    android:textColor="@color/white"
                    android:textSize="10dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlintro"
                android:text="Mô tả"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvStatus"
                android:text="Mô tả"
                android:textSize="15dp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/imShopImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>