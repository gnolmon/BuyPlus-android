<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/width_row"
        android:padding="@dimen/padding_standard" >

        <lc.buyplus.customizes.RoundedImageView
            android:id="@+id/imFriend"
            android:src="@drawable/square"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="8dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/imFriend"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvFriendName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Thanh Mai"
                android:textColor="@color/maincolor"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/tvFriendId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvFriendName"
                android:text="ID : 12345"
                android:textColor="@color/timestamp"
                android:textSize="13dp" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/btnAddFriend"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/button_background"
                    android:layout_marginRight="@dimen/feed_item_profile_info_padd"
                    android:text="Thêm bạn"
                    android:textColor="@color/white"
                    android:textSize="15dp" />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>