<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_standard"
        android:orientation="horizontal" >

        <lc.buyplus.customizes.RoundedViewImage
            android:id="@+id/imShop"
            android:src="@drawable/square"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_standard"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvTitleShop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jack Lane"
                        android:textColor="@color/actionbar"
                        android:textSize="15dp"/>

                    <TextView
                        android:id="@+id/tvScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tvTitleShop"
                        android:text="Số điểm tích"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/tvChangeGift"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tvChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/imNoti"
                        android:text="Có thể đổi quà"
                        android:textColor="@color/black"
                        android:textSize="13dp" />

                    <ImageView
                        android:id="@+id/imIsExchange"
                        android:layout_width="15dp"
                        android:layout_gravity="center_vertical"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/tick_ok"
                        android:layout_marginLeft="@dimen/feed_item_profile_info_padd" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>