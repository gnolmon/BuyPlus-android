<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rlPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/padding_login"
        android:layout_marginRight="@dimen/padding_login"
        android:layout_marginTop="10dp"
        android:background="@drawable/round_edittext_normal"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/edPass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/edit_padding"
            android:background="#00000000"
            android:hint="Nhập mật khẩu"
            android:password="true"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/size_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@id/rlPass"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/padding_login"
        android:layout_marginRight="@dimen/padding_login"
        android:background="@drawable/round_edittext_normal"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyEditText
            android:id="@+id/edNameLogin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/edit_padding"
            android:background="#00000000"
            android:hint="Nhập tên đăng nhập"
            android:singleLine="true"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/size_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/rlPass"
        android:layout_marginLeft="@dimen/padding_login"
        android:layout_marginRight="@dimen/padding_login"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/button_background"
            android:text="ĐĂNG NHẬP"
            android:textColor="@color/white"
            android:textSize="@dimen/size_edit" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlFb"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlButton"
        android:layout_marginLeft="@dimen/padding_login"
        android:layout_marginRight="@dimen/padding_login"
        android:orientation="vertical" >

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlregister"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlFb"
        android:layout_marginRight="@dimen/padding_login"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyTextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:text="Đăng ký"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/rlregister"
        android:layout_marginRight="@dimen/padding_login"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyTextView
            android:id="@+id/btnForgetPass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Quên mật khẩu"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </RelativeLayout>

</RelativeLayout>