<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/canvas"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height"
        android:background="@color/actionbar"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1" >

            <LinearLayout
                android:id="@+id/fragment_canvas_search_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/bound_action_bar"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone" >

                <lc.buyplus.customizes.MyEditText
                    android:id="@+id/fragment_canvas_search_edittext"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@color/actionbar_search"
                    android:gravity="center_vertical"
                    android:hint="Tìm kiếm"
                    android:lines="1"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/white"
                    android:textSize="15dp" />

                <LinearLayout
                    android:id="@+id/fragnemt_canvas_search_cancel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:src="@drawable/c" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_canvas_title_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/fragment_canvas_search"
                    android:layout_width="@dimen/actionbar_height"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/search" />
                </LinearLayout>

                <lc.buyplus.customizes.MyTextView
                    android:id="@+id/fragment_canvas_title"
                    android:layout_width="@dimen/zero"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:lines="1"
                    android:textColor="@color/white"
                    android:textSize="@dimen/canvas_title_text_size" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/fragment_canvas_sort"
            android:layout_width="@dimen/actionbar_height"
            android:layout_height="match_parent"
            android:gravity="center" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/sort" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rhomeTab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/hometab_height"
        android:layout_centerInParent="true"
        android:background="@color/white"
        android:orientation="horizontal" >

        <View
            android:id="@+id/separator"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:background="@color/title" />

        <LinearLayout
            android:id="@+id/idAnnouce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_title" >

            <ImageView
                android:id="@+id/imStore"
                android:layout_width="@dimen/icon_title"
                android:layout_height="@dimen/icon_title"
                android:layout_marginRight="5dp"
                android:src="@drawable/store" />

            <TextView
                android:id="@+id/tvStore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/imStore"
                android:text="Cửa hàng"
                android:textColor="@color/title"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idNews"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imNews"
                android:layout_width="@dimen/icon_title"
                android:layout_height="@dimen/icon_title"
                android:layout_margin="5dp"
                android:src="@drawable/news" />

            <TextView
                android:id="@+id/tvNews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Tin tức"
                android:textColor="@color/title"
                android:textSize="15dp" />
            <ImageView
                android:id="@+id/imNewsDialog"
                android:layout_width="@dimen/icon_title"
                android:layout_height="@dimen/icon_title"
                android:layout_marginLeft="5dp"
                android:src="@drawable/down_gray" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/idAnnouce"
            android:layout_toStartOf="@id/idNews"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_title" >

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_divide"
                android:layout_marginTop="@dimen/margin_divide"
                android:background="@color/title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/idSort"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="@dimen/feed_item_padding_left_right" >

            <ImageView
                android:id="@+id/imSort"
                android:layout_width="@dimen/icon_title"
                android:layout_height="@dimen/icon_title"
                android:layout_margin="5dp"
                android:src="@drawable/sort_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Sắp xếp"
                android:textColor="@color/title"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/idNews"
            android:layout_toStartOf="@id/idSort"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin_title" >

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_divide"
                android:layout_marginTop="@dimen/margin_divide"
                android:background="@color/title" />
        </LinearLayout>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/zero"
        android:layout_weight="1"
        android:background="@color/white" >
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/tabbar_height"
        android:background="@color/maincolor_light"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/fragment_canvas_home_tab"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/icon_tab"
                android:layout_height="@dimen/icon_tab"
                android:src="@drawable/home_white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_divide"
            android:layout_marginTop="@dimen/margin_divide"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/fragment_canvas_personal_tab"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/icon_tab"
                android:layout_height="@dimen/icon_tab"
                android:src="@drawable/personal_white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_divide"
            android:layout_marginTop="@dimen/margin_divide"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/fragment_canvas_loyaltycard_tab"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/icon_tab"
                android:layout_height="@dimen/icon_tab"
                android:src="@drawable/card_white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_divide"
            android:layout_marginTop="@dimen/margin_divide"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/fragment_canvas_notifications_tab"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/icon_tab"
                android:layout_height="@dimen/icon_tab"
                android:src="@drawable/bell_white" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_divide"
            android:layout_marginTop="@dimen/margin_divide"
            android:background="@color/white" />

        <LinearLayout
            android:id="@+id/fragment_canvas_setting_tab"
            android:layout_width="@dimen/zero"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/icon_tab"
                android:layout_height="@dimen/icon_tab"
                android:src="@drawable/setting_white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>