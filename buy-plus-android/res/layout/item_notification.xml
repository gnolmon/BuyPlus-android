<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_standard" >

        <lc.buyplus.customizes.RoundedImageView
            android:id="@+id/imNoti"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_standard" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tvTitleNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chu Quang "
                    android:textColor="@color/black"
                    android:textSize="30px"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvNoti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tvTitleNoti"
                    android:text="Chu Quang "
                    android:textColor="@color/black"
                    android:textSize="30px" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tvTimeStamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imNoti"
                    android:text="1 ngày trước"
                    android:textColor="@color/timestamp"
                    android:textSize="@dimen/timestamp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_standard"
                android:paddingRight="@dimen/padding_standard" >

                <Button
                    android:id="@+id/btnAllow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:background="@color/maincolor"
                    android:text="Đồng ý"
                    android:textColor="@color/white" >
                </Button>

                <Button
                    android:id="@+id/btnDeny"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="@dimen/padding_standard"
                    android:layout_toRightOf="@id/btnAllow"
                    android:background="@color/maincolor"
                    android:text="Từ chối"
                    android:textColor="@color/white" >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>