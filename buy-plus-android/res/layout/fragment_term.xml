<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/imAvaUser"
            android:layout_width="@dimen/person_ava_width"
            android:layout_height="@dimen/person_ava_height"
            android:src="@drawable/buyplusicon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/person_ava_height"
            android:layout_toEndOf="@id/imAvaUser"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <lc.buyplus.customizes.MyTextView
                android:id="@+id/tvNameUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/feed_item_margin"
                android:layout_toEndOf="@id/imAvaUser"
                android:text="Tên: Chu Quang Long"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <lc.buyplus.customizes.MyTextView
                android:id="@+id/tvBirthUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvNameUser"
                android:layout_margin="@dimen/feed_item_margin"
                android:layout_toEndOf="@id/imAvaUser"
                android:text="Ngày sinh: 3/7/1994"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <lc.buyplus.customizes.MyTextView
                android:id="@+id/tvPhoneUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvBirthUser"
                android:layout_margin="@dimen/feed_item_margin"
                android:layout_toEndOf="@id/imAvaUser"
                android:text="Số điện thoại:0962306092"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imAvaUser"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/feed_item_margin"
            android:text="Điều khoản sử dụng"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/term_size"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/feed_item_margin"
            android:scrollbars="vertical"
            android:text="Điều khoản sử dụng"
            android:textColor="@color/black"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <lc.buyplus.customizes.MyCheckbox
            android:id="@+id/cbAgreeTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Tôi đồng ý điều khoản sử dụng" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@color/actionbar"
        android:orientation="vertical" >

        <lc.buyplus.customizes.ButtonFlat
            android:id="@+id/btnAgreeTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đồng ý" >
        </lc.buyplus.customizes.ButtonFlat>
    </LinearLayout>

</LinearLayout>